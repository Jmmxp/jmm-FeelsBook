<?xml version="1.0" encoding="utf-8"?>

<!-- All emoji images are open source Twitter emojis. Source: https://emojipedia.org/twitter/twemoji-11.1/-->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/joy_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/sadness_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/joy" />

    <ImageView
        android:id="@+id/sadness_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/surprise_image_view"
        app:layout_constraintStart_toEndOf="@+id/joy_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sadness" />

    <ImageView
        android:id="@+id/surprise_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/love_image_view"
        app:layout_constraintStart_toEndOf="@+id/sadness_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/surprise" />

    <ImageView
        android:id="@+id/love_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/anger_image_view"
        app:layout_constraintStart_toEndOf="@+id/surprise_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/love" />

    <ImageView
        android:id="@+id/anger_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/fear_image_view"
        app:layout_constraintStart_toEndOf="@+id/love_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anger" />

    <ImageView
        android:id="@+id/fear_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/anger_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fear" />

</android.support.constraint.ConstraintLayout>